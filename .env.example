# ========================================
# Agent Configuration
# ========================================

# Agent Mode (normal | test | aggressive)
AGENT_MODE=normal

# ========================================
# LLM Configuration
# ========================================

# Gemini (Primary)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash
GEMINI_PRO_MODEL=gemini-2.5-pro

# Vertex AI (Optional, for higher quota)
USE_VERTEX_AI=false
GCP_PROJECT_ID=your_gcp_project_id
GCP_LOCATION=us-central1

# Ollama (Optional, for local LLM)
# OLLAMA_URL=http://localhost:11434/api/generate
# LLM_MODEL=gemma2

# ========================================
# Twitter (Twikit - Cookie Auth)
# ========================================

# Get these from browser DevTools > Application > Cookies > twitter.com
TWITTER_AUTH_TOKEN=your_auth_token_from_cookies
TWITTER_CT0=your_ct0_token_from_cookies

# ========================================
# Optional: Virtuals G.A.M.E SDK
# ========================================

USE_VIRTUAL_SDK=false
# GAME_API_KEY=your_game_api_key
